<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Laikipia National Park"
                android:textAlignment="center"
                android:id="@+id/textView5"
                android:paddingBottom="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/laikipia"
                android:id="@+id/textView6"
                android:paddingBottom="2dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Samburu National Park"
                android:textAlignment="center"
                android:id="@+id/textView7"
                android:paddingBottom="2dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imageView6"
                android:paddingBottom="2dp"
                android:src="@drawable/samburu"
                android:background="#192800" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/samburu"
                android:id="@+id/textView10"
                android:paddingBottom="2dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Shaba National Park"
                android:textAlignment="center"
                android:id="@+id/textView8"
                android:paddingBottom="2dp"
                android:paddingTop="10dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imageView7"
                android:paddingBottom="2dp"
                android:src="@drawable/shaba"
                android:background="#192800"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/shaba"
                android:id="@+id/textView9"
                android:paddingBottom="2dp"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Marsabit National Park"
                android:textAlignment="center"
                android:id="@+id/textView22" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/imageView5"
                android:background="#192800"
                android:paddingBottom="2dp"
                android:src="@drawable/marsabit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Far to the north of Kenya, a densely forested mountain and three crater lakes provide a haven for a variety of birdlife, mammals and reptiles. The beautiful Marsabit National Park is a refuge for huge tusked bull elephants, diverse birdlife and reptiles. Hikes in the dense forest, wreathed in mist can be enjoyed along with camel rides, bird watching and visits to the singing wells.
                "
                android:id="@+id/textView23"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>




</LinearLayout>
